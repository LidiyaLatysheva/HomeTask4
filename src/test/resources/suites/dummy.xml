<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Calculator"  parallel="tests" thread-count="15">
    <test name="All_tests">
        <groups>
            <run>
                <include name="all" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.latysheva.CosTest"/>
            <class name="com.epam.latysheva.CtgTest"/>
            <class name="com.epam.latysheva.DivTest"/>
            <class name="com.epam.latysheva.IsPositiveTest"/>
            <class name="com.epam.latysheva.IsNegativeTest"/>
            <class name="com.epam.latysheva.MultTest"/>
            <class name="com.epam.latysheva.PowTest"/>
            <class name="com.epam.latysheva.SinTest"/>
            <class name="com.epam.latysheva.SqrtTest"/>
            <class name="com.epam.latysheva.SubTest"/>
            <class name="com.epam.latysheva.SumTest"/>
            <class name="com.epam.latysheva.TgTest"/>
        </classes>
    </test>

    <test name="Trig_tests">
        <groups>
            <run>
                <include name="trigo" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.latysheva.CosTest"/>
            <class name="com.epam.latysheva.CtgTest"/>
            <class name="com.epam.latysheva.SinTest"/>
            <class name="com.epam.latysheva.TgTest"/>
        </classes>
    </test>
    <test name="Arifm_tests">
        <groups>
            <run>
                <include name="arif" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.latysheva.DivTest"/>
            <class name="com.epam.latysheva.MultTest"/>
            <class name="com.epam.latysheva.PowTest"/>
            <class name="com.epam.latysheva.SqrtTest"/>
            <class name="com.epam.latysheva.SubTest"/>
            <class name="com.epam.latysheva.SumTest"/>
        </classes>
    </test>

</suite>